extends layout

block content
  .container
    .page-header
      h1 Sign Up!
        small  or&nbsp;
          a(href="/signin") Sign In
    .row.row-fluid.form(style="max-width: 500px;")
      .col-xs-12
        p#formError.text-danger
        .form-group
          label(for="email").control-label Email address
          input#email.form-control(name="email", type="email", placeholder="Enter email address")
        .form-group
          label(for="password").control-label Password
          input#password.form-control(name="password", type="password", placeholder="Create a password")
        .form-group
          label(for="cpassword").control-label Confirm password
          input#cpassword.form-control(name="cpassword", type="password", placeholder="Re-enter your password")
        hr
        .form-group
          label(for="firstName").control-label First Name
          input#firstName.form-control(name="firstName", type="text", placeholder="Enter your first name")
        .form-group
          label(for="lastName").control-label Last Name
          input#lastName.form-control(name="lastName", type="text", placeholder="Enter your last name")
        .form-group
          label(for="displayName").control-label Display Name
          input#displayName.form-control(name="displayName", type="text", placeholder="This will be used on your profile")
        hr
        .form-group
          label(for="department").control-label Department
          select#department.form-control(name="department")
            option(selected="",value="") -- Choose Department --
            include includes/depts_dropdown.jade
        .form-group
          label(for="country").control-label Country
          select#country.form-control(name="country")
            option(selected="",value="") -- Choose Country --
            include includes/countries_dropdown.jade
        hr
        .form-group
          button#btnSignup.btn.btn-success.btn-lg Sign up
  script(type='text/javascript', src='/js/errors.js')
  script(type='text/javascript', src='/js/signup.js')
